<p id="notice">
    <%= notice %>
</p>

<h1>Books</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>

    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
            <td><%= link_to "Show",book_path(book) %></td>
            <td><%= link_to "Edit",edit_book_path(book) %></td>
            <td><%= link_to "Destroy",book_path(book),method: :delete %></td>
    </tr>
    <% end %>
    
</table>

<div class="new">
    <h1>New book</h1>
    <%= form_with model:@book, url:'/books',local:true do |f| %>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        
        <%= f.submit 'Create Book', class: "submit" %>
        
    <% end %>
</div>