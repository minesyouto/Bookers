<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
    <%= message %>
      <% end %>
    <% end %>
    <div class="new">
        
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Body</h4>
        <%= f.text_area :body %>
        
        <%= f.submit 'Update Book', id:"update",class: "submit" %>
        <div class="button">
            <%= link_to "Show" ,book_path(@book)%>
            <%= link_to "Back" ,'/books',class:"back" %>
        </div>
    </div>
<% end %>
